generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"  
  url      = "file:./../lite.db"  
}

model AdminUser {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuSection {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  schema    Json
  order     Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  items     Product[]

  @@map("menu_sections")
}

model Product {
  id          Int         @id @default(autoincrement())
  sectionId   Int
  name        String
  description String
  imageUrl    String
  data        Json
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  order       Int
  menuSection MenuSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@map("menu_items")
}

model OtpCode {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  code      String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

enum OrderStatus {
  Принято
  Готовится
  Доставляется
  Доставлено
}

model Order {
  id             String      @id
  customerName    String
  phone          String
  address        String
  deliveryTime    String
  paymentMethod   String
  items          Json
  total          Int
  status         OrderStatus  @default(Принято)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}